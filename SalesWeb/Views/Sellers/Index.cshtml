@model IEnumerable<SalesWeb.Models.Seller>

@{
    ViewData["Title"] = "Sellers";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="table-success">
            <td>
                @Html.DisplayNameFor(model => model.Name)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.Email)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.BrithDay)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.BaseSalary)
            </td>           
            <th></th>
        </tr>        
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td> <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td> <td>
                @Html.DisplayFor(modelItem => item.BrithDay)
            </td> <td>
                @Html.DisplayFor(modelItem => item.BaseSalary)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a>           
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-danger">Details</a>            
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-warning">Delete</a>
            </td>
        </tr>
        }

        </tbody>

    </table>